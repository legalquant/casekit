{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CaseKit",
  "version": "0.1.0",
  "identifier": "me.proton.casekit",
  "build": {
    "beforeDevCommand": "pnpm --filter casekit dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm --filter casekit build",
    "frontendDist": "../src-frontend/dist"
  },
  "app": {
    "windows": [
      {
        "title": "CaseKit",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.anthropic.com; style-src 'self' 'unsafe-inline'; script-src 'self'; img-src 'self' asset: https://asset.localhost; font-src 'self'; object-src 'none'; base-uri 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}